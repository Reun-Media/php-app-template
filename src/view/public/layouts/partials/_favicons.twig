{% set faviconSettings = {
  appName: 'My App',
  appColor: '#ffffff'
} %}

<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="manifest" href="/site.webmanifest" />
<link rel="mask-icon"
  href="/safari-pinned-tab.svg"
  color="{{ faviconSettings.appColor }}" />
<meta name="apple-mobile-web-app-title"
  content="{{ faviconSettings.appName }}" />
<meta name="application-name" content="{{ faviconSettings.appName }}" />
<meta name="msapplication-TileColor" content="{{ faviconSettings.appColor }}" />
<meta name="theme-color" content="{{ faviconSettings.appColor }}" />
